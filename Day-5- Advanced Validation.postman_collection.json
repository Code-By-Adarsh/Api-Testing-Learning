		{
			"name": "Unauthorized Request",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code should be 401 or 403\",function(){\r",
							"    pm.expect(pm.response.code).to.be.oneOf([400,401,403]);\r",
							"});\r",
							"\r",
							"const body = pm.response.json();\r",
							"pm.test(\"Error message should be present\",function(){\r",
							"    pm.expect(body.error ||  body.message).to.exist;\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
