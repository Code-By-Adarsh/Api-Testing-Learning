	"item": [
		{
			"name": "Negative test practice",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code should be 201\",function(){\r",
							"    pm.expect(pm.response.code).to.eql(201);\r",
							"})\r",
							"\r",
							"const data = pm.response.json();\r",
							"pm.test(\"Response should echo the invalid payload\",function(){\r",
							"    pm.expect(data.userId).to.eql(\"adarsh\");\r",
							"    pm.expect(data.id).to.exist;\r",
							"    pm.expect(data.title).to.eql(123);\r",
							"    pm.expect(data.body).to.eql(true);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "x-api-key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"userId\":\"adarsh\",\r\n    \"title\":123,\r\n    \"body\":true\r\n}\r\n",
