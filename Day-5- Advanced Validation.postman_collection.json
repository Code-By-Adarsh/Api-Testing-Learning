		{
			"name": "JSON Schema Validation",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const schema = {\r",
							"    \"type\": \"object\",\r",
							"    \"required\":[\"userId\",\"id\",\"title\",\"body\"],\r",
							"    \"properties\":{\r",
							"        \"userId\":{\"type\":\"number\"},\r",
							"        \"id\":{\"type\":\"number\"},\r",
							"        \"title\":{\"type\":\"string\"},\r",
							"        \"body\":{\"type\":\"string\"}\r",
							"    }\r",
							"};\r",
							"\r",
							"pm.test(\"Schema should be valid\",function(){\r",
							"    pm.expect(pm.response).to.have.jsonSchema(schema);\r",
							"});"
						],
						"type": "text/javascript",
