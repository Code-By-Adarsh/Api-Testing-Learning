		{
			"name": "Invalid Payloads",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\",function(){\r",
							"    pm.expect(pm.response.code).to.eql(201);\r",
							"});\r",
							"\r",
							"const body = pm.response.json();\r",
							"pm.test(\"Server should echo invalid types\",function(){\r",
							"    pm.expect(body.title).to.be.an(\"array\");\r",
							"    pm.expect(body.body).to.be.an(\"object\");\r",
							"    pm.expect(body.userId).to.eql(null);\r",
							"    pm.expect(body.active).to.eql(\"yes\");\r",
							"    pm.expect(body.rating).to.eql(\"five\");\r",
							"    pm.expect(body.extraField).to.eql(999);\r",
							"});\r",
							"\r",
							"pm.test(\"Extra field should appear in response\",function(){\r",
							"    pm.expect(body.extraField).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Provided Id should be number\",function(){\r",
							"    pm.expect(body.id).to.be.a(\"number\");\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "x-api-key",
						"value": "{{apiKey}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"title\":[\"wrong\", \"adarsh\"],\r\n    \"body\":{\"msg\":\"nothing\"},\r\n    \"userId\":null,\r\n    \"active\":\"yes\",\r\n    \"rating\":\"five\",\r\n    \"extraField\":999\r\n}\r\n",
					"options": {
