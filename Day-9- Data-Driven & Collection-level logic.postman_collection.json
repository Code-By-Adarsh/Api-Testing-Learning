			"name": "Create User with",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const expectedStatus = parseInt(pm.iterationData.get(\"expStatus\"));\r",
							"const actualStatus = pm.response.code;\r",
							"\r",
							"//check api returned what we expected\r",
							"pm.test(\"Status code matches the expected response code\",()=>{\r",
							"    pm.expect(actualStatus).to.eql(expectedStatus);\r",
							"});\r",
							"\r",
							"//positive case validation\r",
							"if(actualStatus == 201){\r",
							"    pm.test(\"User created successfully\",()=>{\r",
							"        pm.expect(pm.response.json().id).to.exist;\r",
							"    });\r",
							"}\r",
							"\r",
							"//negative case validation\r",
							"if(actualStatus == 400){\r",
							"    pm.test(\"Error message is returned\",()=>{\r",
							"        pm.expect(pm.response.json().error).to.exist;\r",
							"    });\r",
							"}\r",
							"\r",
							"//performance test\r",
							"pm.test(\"Response time is under the 1s\",()=>{\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});"
						],
